inode/directory; pcmanfm '%s';

text/html; /usr/bin/firefox '%s'\;
text/html; w3m -I %{charset} -T text/html; copiousoutput;

# Open text files, Markdown, LaTeX, and Org with Emacs.
text/plain; ~/.bin/em %s;
